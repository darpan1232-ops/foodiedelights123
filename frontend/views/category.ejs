<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= category.charAt(0).toUpperCase() + category.slice(1) %> Menu - Foodie Delights</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<%- include('partials/header', { activePage: category }) %>

<main>
    <section class="page-header">
        <h1><%= category.charAt(0).toUpperCase() + category.slice(1) %> Menu</h1>
        <p>Explore our delicious <%= category %> selection</p>
    </section>

    <section class="food-grid">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="food-card">
                    <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
                    <div class="food-info">
                        <h3><%= product.name %></h3>
                        <p><%= product.description %></p>
                        <div class="price">$<%= product.price.toFixed(2) %></div>
                        <button class="order-btn" onclick="addToCart('<%= product._id %>', '<%= product.name %>', <%= product.price %>, '<%= product.imageUrl %>')">Add to Cart</button>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p style="text-align: center; grid-column: 1/-1; padding: 2rem;">No products available in this category.</p>
        <% } %>
    </section>
</main>

<%- include('partials/footer') %>
</body>
<script src="/js/cart.js"></script>
</html>

